@model Table

<h2>Edit Table</h2>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="TableSeats">Table Seats</label>
        <input asp-for="TableSeats" class="form-control" />
        <span asp-validation-for="TableSeats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable">Table Available</label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="TableID" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
