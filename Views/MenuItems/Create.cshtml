@model MenuItem

<a asp-action="Index" asp-controller="MenuItems" class="btn btn-primary">Return</a>

<h1>Create New MenuItem</h1>

<form asp-action="Create" method="post">
    <div class="from-group">
        <label asp-for="MenuID"></label>
        <input asp-for="MenuID" class="form-control" />
        <span asp-validation-for="MenuID" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="from-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>