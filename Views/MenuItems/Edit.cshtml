@model MenuItem

<a asp-action="Index" asp-controller="MenuItems" class="btn btn-primary">Return</a>

<h1>Edit MenuItem</h1>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="MenuID">MenuID</label>
        <input asp-for="MenuID" class="form-control" />
        <span asp-validation-for="MenuID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">MenuItem Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">MenuItem Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable">MenuItem Price</label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="MenuItemID" />
    <button type="submit" class="btn btn-primary">Save</button>
</form>