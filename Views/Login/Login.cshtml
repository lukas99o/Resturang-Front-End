@model Login

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center">Login</h1>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label">Enter Username</label>
                    <input asp-for="Username" class="form-control @(ViewData.ModelState.IsValid ? "" : "is-invalid")" id="username" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Enter Password</label>
                    <input asp-for="Password" type="password" class="form-control @(!ViewData.ModelState.IsValid ? "is-invalid" : "")" id="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">Invalid username or password</div>
                }

                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>