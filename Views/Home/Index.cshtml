@model List<MenuItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumpotron text-center bg-primary text-white py-5 mb-4">
    <h1 class="display-4">Restaurant Kifo</h1>
    <p class="lead">Kifo - A World of Flavors</p>
    <p>Indulge in a diverse range of delicious dishes from around the globe. Whether you're craving something hearty, light, or exotic, our menu has something for everyone!</p>
    <p>Take a look at our top 10 dishes!</p>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Our Specialties</h2>
    <div class="row">
        @for (int i = 0; i < 10 && i < Model.Count; i++)
        {
            <div class="col-6 col-md-4 col-lg-3 text-center mb-4">
                <div class="card shadow-sm">
                    <img src="@Model[i].ImgUrl" style="width: 200px; height: auto;" alt="@Model[i].Description" loading="lazy" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model[i].Name</h5>
                    <p class="card-text">@Model[i].Description</p>
                </div>
            </div>
        }
    </div>
</div>

